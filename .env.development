# Development Environment Variables
# Copy this file to .env.development and modify as needed

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=debug

# Database Configuration
DB_HOST=db
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=88888888
DB_NAME=web_site

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8001
NEXT_PUBLIC_ENVIRONMENT=development

# Security (use weak values for development)
SECRET_KEY=development-secret-key-change-in-production
JWT_SECRET=jwt-development-secret
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# CORS Settings (more permissive for development)
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:8000", "http://localhost:8001", "http://127.0.0.1:3000", "http://127.0.0.1:3001"]

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# Email Configuration (use a test service in development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=""
SMTP_PASSWORD=""
EMAIL_FROM=noreply@dev.local

# File Upload Settings
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760  # 10MB

# External API Keys (use test/sandbox keys)
STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...

# Development Tools
ENABLE_PROFILER=true
ENABLE_DEBUG_TOOLBAR=true
